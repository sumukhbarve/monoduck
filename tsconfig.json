{
  "include": ["src/**/*"],
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2015",
    "jsx": "react",

    /* Modules */
    "module": "commonjs",
    "rootDir": "src",

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "src/index-monoduck.ts",

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
